{
  "name": "squeeze",
  "displayName": "Squeeze",
  "description": "Transform your prompts with AI-powered enhancement, XML structuring, and compression",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "squeeze-sidebar",
          "title": "Squeeze",
          "icon": "resources/squeeze-icon.svg"
        }
      ]
    },
    "views": {
      "squeeze-sidebar": [
        {
          "type": "webview",
          "id": "squeeze.sidebarView",
          "name": "Squeeze"
        }
      ]
    },
    "commands": [
      {
        "command": "squeeze.transform",
        "title": "Squeeze: Transform Prompt"
      },
      {
        "command": "squeeze.copyResult",
        "title": "Squeeze: Copy Result"
      },
      {
        "command": "squeeze.sendToCopilot",
        "title": "Squeeze: Send to Copilot"
      }
    ],
    "configuration": {
      "title": "Squeeze",
      "properties": {
        "squeeze.backendUrl": {
          "type": "string",
          "default": "http://localhost:3000",
          "description": "Backend URL for the Squeeze API"
        },
        "squeeze.apiKey": {
          "type": "string",
          "default": "",
          "description": "Your Squeeze API key for authentication"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.96.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
