{
  "name": "squeeze",
  "displayName": "Squeeze - Prompt Optimizer",
  "description": "Optimizes prompts before sending to Copilot using TheTokenCompany API",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "squeeze-sidebar",
          "title": "Squeeze",
          "icon": "$(zap)"
        }
      ]
    },
    "views": {
      "squeeze-sidebar": [
        {
          "type": "webview",
          "id": "squeeze.sidebarView",
          "name": "Prompt Optimizer"
        }
      ]
    },
    "commands": [
      {
        "command": "squeeze.copyToClipboard",
        "title": "Squeeze: Copy to Clipboard"
      },
      {
        "command": "squeeze.insertToChat",
        "title": "Squeeze: Insert to Copilot Chat"
      }
    ],
    "configuration": {
      "title": "Squeeze",
      "properties": {
        "squeeze.apiEndpoint": {
          "type": "string",
          "default": "https://api.thetokencompany.com/v1/optimize",
          "description": "API endpoint for the optimization service"
        },
        "squeeze.defaultMode": {
          "type": "string",
          "enum": ["compress", "enhance", "xml"],
          "default": "compress",
          "description": "Default optimization mode"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.108.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.52.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
